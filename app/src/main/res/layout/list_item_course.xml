<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/course_item"
    android:nestedScrollingEnabled="true"
    android:background="@drawable/data_frame"
    android:baselineAligned="false"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameAndGradeLayout"
        android:layout_weight="2">
        <TextView
            android:id="@+id/grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/abc_popup_background_mtrl_mult" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_alignTop="@+id/grade"
            android:layout_alignBottom="@+id/grade"
            android:layout_toEndOf="@+id/grade"
            android:layout_toRightOf="@+id/grade"
            android:layout_weight="1"
            android:textStyle="italic"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/courseNum"
            android:textSize="18sp"
            android:layout_alignEnd="@+id/nameAndGradeLayout"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="right" />

    </LinearLayout>

</LinearLayout>
